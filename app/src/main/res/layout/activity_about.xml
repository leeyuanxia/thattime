<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="#f0f0f0"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_about_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/selector_back_btn"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:text="关于"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_about_back"
        android:layout_marginLeft="25dp"
        android:textColor="#f39c12"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/iv_about_back"
        android:layout_marginTop="15dp"
        android:background="#f39c12"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <demo.zcgc.com.thattime.views.CircleImageView
        android:id="@+id/app_icon"
        android:src="@drawable/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_version"
        android:text="版本号："
        android:textColor="#f39c12"
        app:layout_constraintTop_toBottomOf="@+id/app_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/about_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_version"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:textSize="20dp"
        android:padding="15dp"
        android:textColor="#f39c12"
        android:singleLine="false"
        android:text="@string/about_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_check_update"
        android:textSize="15dp"
        android:text="检查更新"
        android:textColor="#f39c12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_content"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_suggestes"
        android:textSize="15dp"
        android:text="意见反馈"
        android:textColor="#f39c12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_check_update"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/QQNumber"
        android:textColor="#ff9c52"
        app:layout_constraintBottom_toTopOf="@+id/copy_right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/QQNumber"
        android:layout_width="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/copy_right"
        android:padding="5dp"
        android:textSize="12dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/copyRight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>