<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:thattime="http://schemas.android.com/tools"
    android:background="#fafafa"
    android:padding="10dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/selector_back_btn"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:text="更多"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_back"
        android:layout_marginLeft="25dp"
        android:textColor="#f39c12"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/iv_back"
        android:layout_marginTop="15dp"
        android:background="#f39c12"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_setting"
        android:text="设置"
        android:textColor="#4d4e46"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
      <demo.zcgc.com.thattime.views.SettingClickView
          android:background="@drawable/clshape"
          app:layout_constraintTop_toBottomOf="@+id/tv_setting"
          android:layout_marginTop="10dp"
          android:id="@+id/scv_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
      </demo.zcgc.com.thattime.views.SettingClickView>
    <demo.zcgc.com.thattime.views.SettingItemView
        android:background="@drawable/clshape"
        xmlns:thattime="http://schemas.android.com/apk/res/demo.zcgc.com.thattime"
        android:id="@+id/siv_update"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/scv_1"
        thattime:destitle="自动更新设置"
        thattime:desoff="自动更新已关闭"
        thattime:deson="自动更新已开启"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </demo.zcgc.com.thattime.views.SettingItemView>
  <!--  <demo.zcgc.com.thattime.views.SettingItemView
        xmlns:thattime="http://schemas.android.com/apk/res/demo.zcgc.com.thattime"
        android:id="@+id/siv_service"
        android:background="#fff"
        android:layout_marginTop="10dp"
        thattime:destitle="健康时间提醒设置"
        thattime:desoff="健康时间提醒已关闭"
        thattime:deson="健康时间提醒已开启"
        app:layout_constraintTop_toBottomOf="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </demo.zcgc.com.thattime.views.SettingItemView>-->
    <demo.zcgc.com.thattime.views.SettingClickView
        android:background="@drawable/clshape"
        app:layout_constraintTop_toBottomOf="@+id/siv_update"
        android:layout_marginTop="10dp"
        android:id="@+id/scv_remind_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </demo.zcgc.com.thattime.views.SettingClickView>
   <demo.zcgc.com.thattime.views.SettingClickView
       android:background="@drawable/clshape"
        app:layout_constraintTop_toBottomOf="@+id/scv_remind_setting"
        android:layout_marginTop="10dp"
        android:id="@+id/scv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </demo.zcgc.com.thattime.views.SettingClickView>
</android.support.constraint.ConstraintLayout>