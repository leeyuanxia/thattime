<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_color_back"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_weight="1"
        android:background="#00000000"
        app:layout_constraintBottom_toTopOf="@+id/cl_color_all"
        >
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_color_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/tv_color"
            android:text="选择背景颜色"
            android:textColor="#BEBEBE"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_color_yellow"
            android:layout_width="match_parent"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_color"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_color_yellow"
                android:textColor="#ffff00"
                android:textSize="20dp"
                android:text="黄色"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/color_yellow"
                android:layout_width="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_color_yellow"
                android:layout_height="wrap_content" />
            <View
                android:background="#ffff00"
                app:layout_constraintTop_toBottomOf="@+id/tv_color_yellow"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_color_green"
            android:layout_width="match_parent"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_color_yellow"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_color_green"
                android:textColor="#00ff00"
                android:textSize="20dp"
                android:text="绿色"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/color_green"
                android:layout_width="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_color_green"
                android:layout_height="wrap_content" />
            <View
                android:background="#00ff00"
                app:layout_constraintTop_toBottomOf="@+id/tv_color_green"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_color_blue"
        android:layout_width="match_parent"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_color_green"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_color_blue"
            android:textColor="#00BFFF"
            android:textSize="20dp"
            android:text="天空蓝"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/color_deepskyblue"
            android:layout_width="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_color_blue"
            android:layout_height="wrap_content" />
            <View
                android:background="#00BFFF"
                app:layout_constraintTop_toBottomOf="@+id/tv_color_blue"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
    </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_color_orange"
            android:layout_width="match_parent"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_color_blue"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_color_orange"
                android:textColor="#FFA500"
                android:textSize="20dp"
                android:text="橘黄色"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/color_orange"
                android:layout_width="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_color_orange"
                android:layout_height="wrap_content" />
            <View
                android:background="#FFA500"
                app:layout_constraintTop_toBottomOf="@+id/tv_color_orange"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_color_red"
            android:layout_width="match_parent"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_color_orange"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_color_red"
                android:textColor="#FF0000"
                android:textSize="20dp"
                android:text="红色"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/color_red"
                android:layout_width="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_color_red"
                android:layout_height="wrap_content" />
            <View
                android:background="#FF0000"
                app:layout_constraintTop_toBottomOf="@+id/tv_color_red"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>